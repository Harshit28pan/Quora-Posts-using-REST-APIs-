<!-- single post ki detail print krayega based on id -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>post in detail</title>
    <link rel="stylesheet" href="/style.css"/>
</head>
<body>

    
  <div class="navbar">
    <a href="/posts">Home</a>
    <a href="/posts/new">New Post</a>
  </div>

  <div class="container">
    

    <h2> Here is your post in detail</h2>
     
     <p>Post Id: <%= post.id %></p>
     <div class="post">
        <h3 class="user"> UserName : @<%= post.username %></h3>
        <h4 class="content">Content : <%= post.content %></h4>
     </div>
  </div>
</body>

    
</html>
